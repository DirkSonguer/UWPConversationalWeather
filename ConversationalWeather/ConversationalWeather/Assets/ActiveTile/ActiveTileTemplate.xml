<tile>
  <visual>

    <binding template="TileSmall">
      <image src="{{TileWeatherStateIcon}}" />
    </binding>

    <binding template="TileMedium" branding="name" displayName="{{TileCurrentTemperature}}">
      <text hint-style="caption" hint-wrap="true">{{TileForecast}}</text>
    </binding>

    <binding template="TileWide" branding="name">
      <group>
        <subgroup hint-weight="26">
          <image src="{{TileWeatherStateIcon}}" />
        </subgroup>
        <subgroup hint-textStacking="center">
          <text hint-style="subtitle" hint-wrap="true">{{TileCurrentTemperature}}</text>
          <text hint-style="caption" hint-wrap="true">{{TileForecast}}</text>
        </subgroup>
      </group>
    </binding>

    <binding template="TileLarge" branding="name">
      <group>
        <subgroup hint-weight="26">
          <image src="{{TileWeatherStateIcon}}" />
        </subgroup>
        <subgroup hint-textStacking="center">
          <text hint-style="subtitle" hint-wrap="true">{{TileCurrentTemperature}}</text>
          <text hint-style="caption" hint-wrap="true">{{TileForecast}}</text>
        </subgroup>
      </group>
    </binding>

  </visual>
</tile>